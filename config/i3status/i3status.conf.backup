general {
    output_format = "i3bar"
}

order += "disk /"
#order += "load"
order += "cpu_usage"
order += "memory"
order += "time"

disk "/" {
    format = "SSD: %avail"
}

load {
    format = "Load: %1min"
}

cpu_usage {
    format = "CPU: %usage"
}

memory {
    format = "RAM: %used"
}

time {
    format = "%Y-%m-%d %H:%M"
}

